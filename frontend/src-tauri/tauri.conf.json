{
	"$schema": "https://schema.tauri.app/config/2",
	"productName": "desktop-jh",
	"version": "0.1.0",
	"identifier": "com.noeda.desktop-jh",
	"build": {
		"beforeDevCommand": "pnpm dev",
		"devUrl": "http://localhost:5173",
		"beforeBuildCommand": "pnpm build",
		"frontendDist": "../build"
	},
	"app": {
		"windows": [
			{
				"title": "Jean-Heude Desktop",
				"width": 800,
				"height": 600,
				"resizable": true
			}
		],
		"security": {
			"csp": "default-src 'self'; connect-src 'self' http://* https://* ws://* wss://*"
		}
	},
	"bundle": {
		"active": true,
		"targets": "all",
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.icns",
			"icons/icon.ico"
		]
	}
}
